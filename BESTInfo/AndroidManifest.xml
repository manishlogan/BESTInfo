<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evolvingvision.bestinfo"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.logan.bestinfo.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.logan.bestinfo.SearchByNumber"
            android:label="@string/title_activity_search_by_number"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.logan.bestinfo.FeedbackActivity"
            android:label="@string/title_activity_feedback" >
        </activity>
        <activity
            android:name="com.logan.bestinfo.SearchByLocationActivity"
            android:label="@string/title_activity_search_by_location"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.logan.bestinfo.SearchBySourceAndDestinationActivity"
            android:label="@string/title_activity_search_by_source_and_destination"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.logan.bestinfo.BusDetailsActivity"
            android:label="@string/title_activity_bus_details" >
        </activity>
    </application>

</manifest>